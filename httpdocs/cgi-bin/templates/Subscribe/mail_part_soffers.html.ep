<br />
<table>
	<tr>
		<th>Название</th>
		<th>Категория</th>
		<th>Место</th>
		<th>Дата вылета</th>
		<th>Срок</th>
		<th>Цена</th>
	</tr>
	<% foreach (@$soffers){ %>
	<tr>
		<td><%= $_->{name} %></td>
		<td><%= $_->{stars} %></td>
		<th><%= $_->{place} %></th>
		<td><% if($_->{tdate} ne '0000-00-00'){ %><%= date_format(date => $_->{tdate}, format => 'dd.mm.yyyy') %><% } else { %>-<% } %></td>
		<th><%= $_->{srok} %></th>
		<td><%= $_->{price} %></td>
	</tr>
	<% } %>
</table>
