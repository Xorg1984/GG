<div style="padding:5px;margin:0px;position:absolute;top:0px;left:0px;display:block;width:99%">
<h1>Недавние документы</h1>
<br />
<br />
<table width="100%" align=center class="tablelist" style="border-top:solid 1px #ccc; border-bottom:solid 1px #ccc">
%	my $class = 'odd';
%	foreach (@$items){
%		$class = $class eq 'odd' ? 'even' : 'odd';
		<tr class="<%== $class %>" onmouseover="this.className='select'" onmouseout="this.className='<%== $class %>'">
  			<td>
  				<div class="hotlink">
    				<%== $_->{link} =%>
    			</div>
  			</td>
		</tr>			
%	}
</table>
</div>
