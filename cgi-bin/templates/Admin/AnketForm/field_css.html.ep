%	my $index = $self->stash->{anketa}->{name};
%	$index =~ s{\.}{}gi;
<tr>
  <td class=edit width="150px">
    <%= $lkey->{name} %>
  </td>
  <td class=edit width="10px" valign=top>
% 	if($lkey->{settings}->{help}){
		<a href="#" onmousemove="show_help(event,'<%= $lkey->{settings}->{help} %>');return false" onmouseout="hide_help()" class=help>?</a>
%	}
  </td>
  <td width="10px" id="_<%= $self->stash->{replaceme} %>_<%= $key %>"></td>
  <td>
	<!-- Комментарий -->
	<b>Нажмите F11 (или ESC для Safari на Mac OS X) когда курсор находится в поле редактирования для полноэкранного режима</b>
  </td>
</tr>
<tr>
  <td colspan="4">
		<textarea onmouseup="this.focus();" class="template" id="template_<%= $index %>" onmousedown="this.focus();" name='<%= $key %>' class="textarea" <% if($lkey->{settings}->{required}){%>required<% } %> style="height:350px;width:100%;"><%= $value =%></textarea>
	</td>
</tr>

