<!DOCTYPE html>
<html lang="ru-RU">
<head>
	%== render_headers

	% js_files_cdn(file => '/js/jquery/plugins/jquery.galleryCarousel.js', template => '_headers.html.ep');
</head>
<body>

	<div class="wrapper">
		%== include 'Texts/_header'

		<div class="topbar">
			<div class="block">
				%== menu_track template => 'top'

				<div class="topbar__search">
					<form id="search-form" method="post" action="/search">
						<input class="search__input" type="text" placeholder="Поиск" name="qsearch"/>
						<input type="submit" class="search__button" value="">
					</form>
				</div>
			</div>
		</div>


		% content wrapper => begin
			<div class="body clearfix">
				<div class="block content">
					%== content
				</div>
			</div>
		% end

		%= content 'wrapper'
	</div>

	%== include 'Texts/_footer'

	%== render_footer
</body>
</html>