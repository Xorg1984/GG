<div class="body-block" id="body-block-faq">
    <div class="content">
        <h2>Вопрос-ответ <a href="<%= url_for('faq') %>">Все вопросы</a></h2>
    </div>
    <ul>
    	<% foreach (@$items){ %>
        	<li><a href="/faq#<%= $_->{ID} %>"><%== cut(string => $_->{name}, cut => 200) %></a></li>
        <% } %>
    </ul>
</div>