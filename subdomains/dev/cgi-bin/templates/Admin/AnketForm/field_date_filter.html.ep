%	my $pref = $self->sysuser->settings->{$self->stash->{replaceme}.'_filter_'.$key.'pref'};
%	$value = '' if ($value eq '0000-00-00');
<tr>
  <td valign=top class=edit width="150px"><%= $lkey->{name} =%>:</td>
  <td>
    <input class=menu type="text" name='<%= $key %>' id='<%= $key %>' value='<%= $value %>' style="width:130px;margin-right:10px"> <button class=submit_save id="button_<%= $lkey %>" onclick="displayCalendar(event, this.form.<%= $lkey %>,'yyyy-mm-dd',this,false); return false;" style="border:0px;background-color:white"><img border=0 src="/admin/img/icons/calendar.gif"></button>
    <input type=radio value="=" name="<%= $key %>pref" <% if($pref eq '=' or !$pref){ %>checked<% } %>> строго
    <input type=radio value=">" name="<%= $key %>pref" <% if($pref eq '>'){ %>checked<% } %>> больше
    <input type=radio value="<" name="<%= $key %>pref" <% if($pref eq '<'){ %>checked<% } %>> меньше
  </td>
</tr>